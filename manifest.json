{
  "manifest_version": 2,

  "name": "in-short: LSI",
  "description": "This extension experiments with LSI, with the intent of producing general summaries and compelling proc-gen content.",
  "version": "1.0",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "debug_popup.html",
    "default_title": "Woosh."
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
